{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"jsxImportSource": "react",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ES2020"
		],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "ES2020"
	},
	"exclude": [
		"node_modules",
		"out"
	],
	"include": [
		"**/*.ts",
		"**/*.tsx"
	]
}
